<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".RelatorioDias">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/fab_margin"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textView_cabecalho_relatorio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/relatorio_dias_titulo"
            android:textColor="@color/colorLetraTitulo"
            android:textStyle="bold"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinner_mes"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="2.5dp"
                android:layout_weight="0.33" />

            <Spinner
                android:id="@+id/spinner_ano"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="2.5dp"
                android:layout_marginRight="2.5dp"
                android:layout_weight="0.33" />

            <Button
                android:id="@+id/button_pesquisar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="2.5dp"
                android:layout_weight="0.33"
                android:background="@drawable/round_corner_button"
                android:textColor="@color/colorLetraBt"
                android:text="Pesquisar" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_mes_pesquisa"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/colorRelatorio"
                android:gravity="bottom|end"
                android:paddingStart="10dp"
                android:textSize="30sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textView_ano_pesquisa"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorRelatorio"
                android:gravity="bottom"
                android:paddingStart="10dp"
                android:paddingBottom="5dp"
                android:textSize="20sp"
                android:visibility="invisible" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linearLayout_resultado_pesquisa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorRelatorio"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"></LinearLayout>
        </ScrollView>


        <!--      <ListView
                  android:id="@+id/list_resultado_dias"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent" /> -->
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
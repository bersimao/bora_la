<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="6dp" />
            <stroke android:width="1dp" android:color="#AAAAAA" />
            <gradient android:angle="-90" android:startColor="#D6D3CE" android:endColor="#D6D3CE"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="6dp" />
            <stroke android:width="0dp" android:color="#AAAAAA" />
            <solid android:color="#F7F7F5"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="6dp" />
            <stroke android:width="0dp" android:color="#AAAAAA" />
            <gradient android:angle="-90" android:startColor="#FFEB3B" android:endColor="#FF9800" />
            <solid android:color="@color/colorButton"/>
        </shape>
    </item>
</selector>
